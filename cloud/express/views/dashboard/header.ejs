<div class="header">
  <a href="/classes" class="logo"><%= siteName %></a>
  <div>
	  <div class="profile">
	    <div class="user"><%= user.get("name") %></div>
	    <div class="arrow fa fa-chevron-down"></div>
	    <div class="clear"></div>
	    <div class="dropdown">
	      <a href="/logout">Sign Out</a>
	    </div>
	  </div>
	  <div class="profile">
	    <div class="user">Class: <%= classroom.get("name") %></div>
	    <div class="arrow fa fa-chevron-down"></div>
	    <div class="clear"></div>
	    <div class="dropdown">
		    <% if(classes.length > 1) { %>
		      <% classes.forEach(function(temp) { %>
		      	<% if(temp.id != classroom.id) { %>
			      	<a href="/classes/<%= temp.id %>"><%= temp.get("name") %></a>
			      <% } %>
			    <% }) %>
			  <% } else { %>
			  	<a href="/classes/new">Create Classroom</a>
			  <% } %>
	    </div>
	  </div>
	  <div class="navigation">
			<a href="/classes/new">Create Classroom</a>
		</div>
  </div>
  <div class="clear"></div>
</div>
